{
  "compilerOptions": {
    "target": "ES2020",                        // Modern JS target
    "lib": ["dom", "dom.iterable", "esnext"], // DOM + modern JS features
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,                            // Next.js handles compilation
    "esModuleInterop": true,                   // Needed for CommonJS compatibility
    "allowSyntheticDefaultImports": true,      // Allows default import of CJS modules
    "module": "ESNext",                        // ESM modules
    "moduleResolution": "node",                // Resolve node modules correctly
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]                           // Alias for imports
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
